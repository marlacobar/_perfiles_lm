<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
		<Dialog 
			id="ControlCargaPDF" 
			title = ""
			contentWidth="100%"
			contentHeight="100%">
			<PDFViewer source="{test>/data}" title="Tarjeton {test>/tarjeton}" height="860px">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</PDFViewer>
			<buttons>
            <Button
						icon = "sap-icon://decline"
						type = "Reject"
						text = "Cerrar"
						press = "onCloseViewPdf"/>        
			</buttons>
		</Dialog>
	</core:FragmentDefinition>